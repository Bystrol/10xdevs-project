---
import UserMenu from "@/components/features/auth/UserMenu.tsx";
import { Toaster } from "@/components/ui/sonner";
import "../styles/global.css";

interface Props {
  title?: string;
}

const { title = "WasteTrack Dashboard" } = Astro.props;
const { user } = Astro.locals;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/png" href="/favicon.png" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="dark">
    {
      user && (
        <header class="bg-white dark:bg-gray-900 border-b border-gray-200 dark:border-gray-800 px-4 py-3">
          <div class="max-w-7xl mx-auto flex justify-between items-center">
            <h1 class="text-xl font-semibold text-gray-900 dark:text-white">WasteTrack Dashboard</h1>
            <UserMenu email={user.email ?? ""} client:load />
          </div>
        </header>
      )
    }
    <main class="min-h-screen">
      <slot />
    </main>
    <Toaster richColors closeButton client:only="react" />
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }
</style>
