---
import Sidebar from "@/components/features/auth/Sidebar";
import { Toaster } from "@/components/ui/sonner";
import "../styles/global.css";

interface Props {
  title?: string;
}

const { title = "WasteTrack Dashboard" } = Astro.props;
const { user } = Astro.locals;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/png" href="/favicon.png" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>

  <body class="dark flex">
    {user && <Sidebar email={user.email ?? ""} client:only="react" />}

    <main class="w-full">
      <slot />
    </main>

    <Toaster richColors closeButton client:only="react" />
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }
</style>
